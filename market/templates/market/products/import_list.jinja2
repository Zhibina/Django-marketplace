{% extends 'market/base.jinja2' %}

{% block middle %}
<h1>{% trans %}Список импортов{% endtrans %}</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>{% trans %}Имя файла или URL{% endtrans %}</th>
      <th>{% trans %}Дата и время начала{% endtrans %}</th>
      <th>{% trans %}Дата и время окончания{% endtrans %}</th>
      <th>{% trans %}Статус{% endtrans %}</th>
      <th>{% trans %}Количество импортированных товаров{% endtrans %}</th>
      <th>{% trans %}Ошибки{% endtrans %}</th>
    </tr>
  </thead>
  <tbody>
    {% for import in imports %}
    <tr>
      <td>{{ import.source }}</td>
      <td>{{ import.start_time }}</td>
      <td>{{ import.end_time }}</td>
      <td>{{ import.get_status_display }}</td>
      <td>{{ import.imported_count }}</td>
      <td>{{ import.errors|length }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}